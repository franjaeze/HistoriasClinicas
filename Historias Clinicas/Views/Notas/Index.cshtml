@model IEnumerable<Historias_Clinicas.Models.Nota>

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpleadoId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaYHora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpleadoId)
                </td>
                <td>
                        @if (User.IsInRole("Medico"))
                        {
                        <a class="botonTablas" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="botonTablas" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        }
                        @if (User.IsInRole("Empleado"))
                        {
                        <a class="botonTablas" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="botonTablas"sp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        }
                    <a class="botonTablas" asp-action="Details" asp-route-id="@item.Id">Detalles</a>

                </td>

            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Paciente"))
{
    <div>
        <a type="button" class="btn btn-secondary" style="margin-left: 20px" asp-action="MenuPaciente" asp-controller="Pacientes">Volver</a>
    </div>
} else
{
    <div>
        <a type="button" class="btn btn-secondary" style="margin-left: 20px" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>
}
