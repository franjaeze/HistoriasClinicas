@model Historias_Clinicas.Models.Episodio

@{
    ViewData["Title"] = "Edit";
}

<h1>Cargar Fecha deAlta</h1>

<h4>Episodio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
               
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input class="form-control" type="datetime-local" id="FechaYHoraAlta"
                               name="FechaYHoraAlta" value=DateTime.Now
                               min=DateTime.Now max="2023-06-14T00:00">
                        <span class="text-danger"></span>
                    </div>

              

                
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
         </div>   
         
</div>

<div>
    <a type="button" class="btn btn-secondary" style="margin-left: 20px" asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
