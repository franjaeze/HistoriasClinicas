@model IEnumerable<Historias_Clinicas.Models.Episodio>

@{
    ViewData["Title"] = "Index";
}

<h1> Listado de Episodios</h1>


<table class="table">
    <thead>
        <tr>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-left">
                Abierto
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th class="text-left">
                Episodio de Internacion
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstadoAbierto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Internacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaYHoraCierre)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |

                        @if (!User.IsInRole("Paciente"))
                        {
                            <p>
                                <a class="botonTablas" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                @*<a asp-action="CerrarEpisodio" asp-route-id="@item.Id">Cerrar</a>*@
                            </p>
                        }
                        <a class="botonTablas"  asp-action="EvolucionesPorEpisodio" asp-controller="Evoluciones" asp-route-id="@item.Id">Evoluciones</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Paciente"))
{
    <div>
        <a type="botonTablas" asp-action="HistoriaClinicaDePaciente" asp-controller="HistoriaClinicas">Volver</a>
    </div>
}
else
{
    <div>
        <a type="botonTablas" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>
}
