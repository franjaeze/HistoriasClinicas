@model IEnumerable<Historias_Clinicas.Models.Episodio>

@{
    ViewData["Title"] = "EpisodiosAbiertos";
}

<h1> Listado de Episodios Abiertos</h1>

<br/>
<br/>


<table class="table">
    <thead>
        <tr>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-left">
                Abierto
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.EstadoAbierto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
            </td>
            <td class="text-left">
                @*@Html.DisplayNameFor(model => model.FechaYHoraCierre)*@

                @if (item.EstadoAbierto == true)
                {
                    <p>Aun en curso</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.FechaYHoraCierre)


                }
            </td>
            <td class="text-left">
                @if (User.IsInRole("Empleado"))
                {
                    <div class="divBoton">
                        @*<a class="boton small" asp-action="Edit" asp-route-id="@item.Id">Editar</a>*@
                        <a class="botonTablas" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                        <a class="botonTablas" asp-action="EvolucionesPorEpisodio" asp-controller="Evoluciones" asp-route-Id="@item.Id">Evoluciones</a>

                    </div>
                }
                @if (User.IsInRole("Medico"))
                {
                    <div class="divBoton">
                        <a class="botonTablas" asp-action="Details" asp-route-id="@item.Id">Detalle</a>

                        @*<a class="boton small" asp-action="CerrarEpisodio" asp-route-id="@item.Id">Cerrar</a>*@
                        <a class="botonTablas" style="margin-left: 20px" asp-action="EvolucionesPorEpisodio" asp-controller="Evoluciones" asp-route-Id="@item.Id">Evoluciones</a>


                    </div>
                }
            </td>
        </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Empleado"))
{
    <div>
        <a type="button" class="btn btn-secondary" style="margin-left: 20px" asp-action="HistoriaClinicaDePaciente" asp-controller="HistoriaClinicas" asp-route-Id="@TempData["PacienteId"]">Volver</a>
    </div>
}
@if (User.IsInRole("Medico"))
{
    <div>
        <a type="button" class="btn btn-secondary" style="margin-left: 20px" asp-action="HistoriaClinicaDePaciente" asp-controller="HistoriaClinicas" asp-route-Id="@TempData["PacienteId"]">Volver</a>
    </div>
}
