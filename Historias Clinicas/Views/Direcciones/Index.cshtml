@model IEnumerable<Historias_Clinicas.Models.Direccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Direcciones:</h1>

@if (User.IsInRole("Empleado")){
    <p>
        <a type="button" class="btn btn-link justify-content-md-end mb-3" asp-action="Create">Crear Direccion</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Piso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Piso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>

                    @if (User.IsInRole("Empleado"))
                    {
                        <div>
                            <a class="botonTablas" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="botonTablas" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class ="botonTablas" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                        </div>
                    }
           
                
            </td>
        </tr>
}
    </tbody>
</table>

 <a class="boton" asp-action="Index" asp-controller="Home">Volver</a>
