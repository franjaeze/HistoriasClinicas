@model IEnumerable<Historias_Clinicas.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Pacientes</h1>

<p>
    <a class="boton" asp-action="Create">Agregar paciente nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ObraSocialP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HistoriaClincaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegundoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeAlta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ObraSocialP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HistoriaClincaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SegundoNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeAlta)
                </td>
                <td>
                  
                        <div class="divBoton">
                            <a class="boton" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="boton" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                            <a class="boton" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                   
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>