@model Historias_Clinicas.Models.Paciente

@{
    ViewData["Title"] = "Index";
}

<h1>Formulario de contacto</h1>

<h5> Completando este formulario, uno de nuestros representantes se comunicara a la mayor brevedad posible. Gracia!</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Contacto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Breve descripcion</label>
                <input  class="form-control" />
                <span  class="text-danger"></span>
            </div>
          
            <div class="form-text">
                <label  class="control-label"> Explicacion detallada</label>
                <input  class="form-control" />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Contact" class="btn btn-primary" />
            </div>
        </form>


        <div>
            <a asp-action="MenuPaciente"></a>
        </div>
    </div>
</div>