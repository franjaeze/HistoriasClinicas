@model Historias_Clinicas.Models.Paciente

@{
    ViewData["Title"] = "Index";
}

<h1>Formulario de contacto</h1>

<h5> Completando este formulario, uno de nuestros representantes se comunicara a la mayor brevedad posible. Gracias!</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Contacto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Breve descripcion</label>
                <input  class="form-control" />
                <span  class="text-danger"></span>
            </div>
          
            <div class="form-text">
                <label  class="control-label"> Explicacion detallada</label>
                <input  class="form-control" />
                <span  class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <a class="boton" asp-action="MenuPaciente"> Enviar</a>
                <a type="boton" class="btn btn-secondary align-content-end" style="margin-left: 20px" asp-action="MenuPaciente"> Cancelar</a>

            </div>
        </form>
    </div>
</div>