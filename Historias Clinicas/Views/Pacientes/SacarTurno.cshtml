@model Historias_Clinicas.Models.Paciente

<h1>Solicitud de Turno </h1>

<h4>Por favor, seleccione fecha y hora del turno para avanzar</h4>


<div class="row">
    <div class="col-md-4">
        <form asp-action="SacarTurno">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"></label>
                <input class="form-control" type="datetime-local" id="meeting-time"
                       name="meeting-time" value=DateTime.Now
                       min=DateTime.Now max="2023-06-14T00:00">
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmar" class="boton" asp-action="MenuPaciente" />
                <a class="boton" asp-action="MenuPaciente"> Cancelar</a>
            </div>
        </form>
    </div>

</div>

