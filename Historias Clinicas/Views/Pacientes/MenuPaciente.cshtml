@model Historias_Clinicas.Models.Paciente
@{
    ViewData["Title"] = "MenuPaciente";
}

<div class="container">
    <div class="row">
        <div class=" col-lg-2"></div>
        <div class=" col-lg-8 col-md-12">
            @if (ViewBag.Nombre != null) { 
            <h1> Bienvenido @ViewBag.Nombre ! </h1>}
            <h3 class="my-2">En que podemos ayudarte? </h3>
            <ul class="nobull my-5">
                <li class="my-3">
                    <a type="button" class="menuBoton" asp-controller="Pacientes" asp-action="MiHistoriaClinica">
                        Mi Historia Clinica
                    </a>
                </li>
                <li class="my-3">
                    <a type="button" class="menuBoton"  asp-controller="Pacientes" asp-action="ListarMedicos" asp-route-id="@ViewData["PacienteId"]">
                        Mis Medicos
                    </a>
                </li>

                <li class="my-3">
                    <a type="button" class="menuBoton" asp-controller="Medicos" asp-action="Index">
                        Cartilla medica
                    </a>
                </li>

                <li class="my-3">
                    <a type="button" class="menuBoton"  asp-controller="Pacientes" asp-action="Contacto">
                        Contactarme con un representante
                    </a>
                </li>
                <li class="my-3">
                    <a type="button" class="menuBoton"  asp-route-id="@ViewBag.id" asp-controller="Pacientes" asp-action="Edit">
                        Actualizar Informacion Personal
                    </a>
                </li>
            </ul>
        </div>
        <div class=" col-lg-2"></div>
    </div>
</div>