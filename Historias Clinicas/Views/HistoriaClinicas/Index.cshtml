@model IEnumerable<Historias_Clinicas.Models.HistoriaClinica>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Agregar Historia Clinica</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PacienteId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PacienteId)
            </td>
            <td>
                </td>
                @if (User.IsInRole("Medico"))
                {
                    <div class="divBoton">
                       <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                       <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                       <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a> 

                    </div>
                }
                </td>
             
                 </td>
                
                {
                    <div class="divBoton">
                        <a class="boton small" asp-action="Index" asp-controller="Episodios" asp-route-id="@item.Id">Acceso Episodios</a>

                    </div>
                }
                </td>
             
            </td>
        </tr>
}
    </tbody>
</table>
