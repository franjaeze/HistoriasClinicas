@model IEnumerable<Historias_Clinicas.Models.Episodio>

@{
    ViewData["Title"] = "HistoriaClinicaDePaciente";
}



<header

    <h1>Historia Clinica</h1>
    <h3> Listado de Episodios</h3>
    <p></p>
    <p></p>
    <p style="background-color: white; color: black; font-weight: bold; font-size:larger" align="left"> Número de Historia Clínica : @ViewData["historiaId"] </p>
</header>





@if (User.IsInRole("Empleado"))
{
    <p align="right">
        <a type="button" class="btn btn-link justify-content-md-end mb-3" asp-action="Create" asp-controller="Episodios" asp-route-Id="@ViewData["historiaId"]">
            Agregar Episodio
        </a>

    </p>
}


<table class="table">
    <thead>
        <tr>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-left">
                Abierto
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th class="text-left">
                Episodio de Internacion
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstadoAbierto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Internacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
                </td>
                <td>
                    @if (item.EstadoAbierto == true)
                    {
                        <p>Aun en curso</p>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.FechaYHoraCierre)


                    }
                </td>
                <td>
                    <a class="botonTablas" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                    @if (User.IsInRole("Empleado"))
                    {

                        <a class="botonTablas" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="botonTablas" asp-action="Cerrar" asp-controller="Episodios" asp-route-id="@item.Id">Cerrar Episodio</a>
                    }
                    @if (User.IsInRole("Medico"))
                    {
                        <a class="botonTablas" asp-action="Cerrar" asp-controller="Episodios" asp-route-id="@item.Id">Cerrar Episodio</a>
                    }

                    <a class="botonTablas" asp-action="EvolucionesPorEpisodio" asp-controller="Evoluciones" asp-route-id="@item.Id">Evoluciones</a>
                    <a class="botonTablas" asp-action="EpicrisisPorEpisodio" asp-controller="Epicrisis" asp-route-id="@item.Id">Epicrisis</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Paciente"))
{
    <div>
        <a class="boton" align="right" asp-action="MenuPaciente" asp-controller="Pacientes">Volver</a>
    </div>
}
else
{
   <div>
        <a class="boton" align="right" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>  
}

