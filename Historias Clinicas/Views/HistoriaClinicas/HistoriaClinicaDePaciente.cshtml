@model IEnumerable<Historias_Clinicas.Models.Episodio>

@{
    ViewData["Title"] = "HistoriaClinicaDePaciente";
}



<header>
    <h1>Historia Clinica</h1>
    <h3> Listado de Episodios</h3>
    <p></p>
    <p></p>
    <p style="background-color: white; color: black; font-weight: bold; font-size:larger" align="left"> Numero de Historia Clínica : @ViewData["historiaId"] </p>
</header>





@if (User.IsInRole("Empleado"))

{
    <p align="right">
        <a type="button" class="btn btn-link justify-content-md-end mb-3" asp-action="Create" asp-controller="Episodios" asp-route-Id="@ViewData["historiaId"]">
            Agregar Episodio
        </a>

    </p>}


<table class="table">
    <thead>
        <tr>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-left">
                Abierto
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.Especialidad)
            </th>
            <th class="text-left">
                Episodio de Internacion
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th class="text-left">
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstadoAbierto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Internacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaYHoraCierre)
                </td>
                <td>
                    @if (User.IsInRole("Empleado"))
                    {
                        <div class="divBoton">
                            <a class="boton small" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="boton small" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                            <a class="boton small" asp-action="EvolucionesPorEpisodio" asp-controller="Evoluciones" asp-route-id="@item.Id">Evoluciones</a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("Empleado"))
{
    <div>
        <a align="right" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>
}
@if (User.IsInRole("Medico"))
{
    <div>
        <a align="right" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>
}
@if (User.IsInRole("Paciente"))
{
    <div>
        <a align="right" asp-action="MenuPaciente" asp-controller="Pacientes">Volver</a>
    </div>
}

