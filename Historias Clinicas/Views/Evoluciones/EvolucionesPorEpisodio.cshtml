@model IEnumerable<Historias_Clinicas.Models.Evolucion>

@{
    ViewData["Title"] = "EvolucionesPorEpisodio";
}


<header>
    <h1>Episodio</h1>
    <h3> Listado de Evoluciones</h3>
    <p></p>
    <p></p>
    <p style="background-color: white; color: black; font-weight: bold; font-size:larger" align="left"> Numero de Episodio : @ViewData["EpisodioId"] </p>
</header>

@if (User.IsInRole("Medico"))

{
    <p align="right">
        <a class="btn btn-link justify-content-md-end mb-3" asp-action="Create" asp-controller="Evoluciones" asp-route-Id="@ViewData["EpisodioId"]">
            Agregar Evolucion
        </a>

    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoAbierto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.MedicoId)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstadoAbierto)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaYHoraAlta)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaYHoraCierre)
                </td>
                <td>
                    @if (User.IsInRole("Medico"))
                    {
                        <p class="text-left">

                            <a class="boton" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="boton" asp-action="Cerrar" asp-route-id="@item.Id">Cerrar </a>
                        </p>
                    }
                    <a class="boton text-left" asp-action="NotasPorEvolucion" asp-controller="Notas" asp-route-id="@item.Id">Notas</a>
                    <a class="boton text-left" asp-action="Details" asp-route-id="@item.Id">Detalles</a>

                </td>
            </tr>
        }


    </tbody>
</table>
@if (User.IsInRole("Empleado"))
{
    <div>
        <a align="right" asp-action="Index" asp-controller="Pacientes">Cancelar</a>
    </div>
}
@if (User.IsInRole("Medico"))
{
    <div>
        <a align="right" asp-action="Index" asp-controller="Pacientes">Cancelar</a>
    </div>
}
@if (User.IsInRole("Paciente"))
{
    <div>
        <a align="right" asp-action="MenuPaciente" asp-controller="Pacientes">Volver</a>
    </div>
}