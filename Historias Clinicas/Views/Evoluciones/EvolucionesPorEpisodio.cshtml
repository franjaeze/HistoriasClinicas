@model IEnumerable<Historias_Clinicas.Models.Evolucion>

@{
    ViewData["Title"] = "EvolucionesPorEpisodio";
}


<header>
    <h1>Episodio</h1>
    <h3> Listado de Evoluciones</h3>
    <p style="background-color: white; color: black; font-weight: bold; font-size:larger" align="left"> Numero de Episodio : @TempData["EpisodioId"] </p>
</header>

@if (User.IsInRole("Medico"))

{
    <p align="right">
        <a class="btn btn-link justify-content-md-end mb-3" asp-action="Create" asp-controller="Evoluciones" asp-route-Id="@TempData["EpisodioId"]">
            Agregar Evolucion
        </a>

    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoAbierto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.MedicoId)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EstadoAbierto)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaYHoraAlta)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.FechaYHoraCierre)
                </td>
                <td>

                   
                    <a class="botonTablas" asp-action="Details" asp-route-id="@item.Id" asp-route-paciente="@TempData["historiaId"]">Detalles</a>
                   
                    @if (User.IsInRole("Medico"))
                    {
                        <a class="botonTablas" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        @if (item.EstadoAbierto)
                        {
                            <a class="botonTablas" asp-action="Cerrar" asp-route-id="@item.Id" asp-route-paciente="@TempData["historiaId"]">Cerrar </a>
                        }else
                        {
                            <a class="botonTablas" asp-action="Create" asp-controller="Notas" asp-route-Id="@ViewData["evolucionId"]">Agregar Nota</a>
                                 
                        }
                    }

                    @if (User.IsInRole("Empleado"))
                    {
                        @if (!item.EstadoAbierto)
                        {
                            <a class="botonTablas" asp-action="Create" asp-controller="Notas" asp-route-Id="@ViewData["evolucionId"]">Agregar Nota</a>
                        }

                    }

                    <a class="botonTablas" asp-action="NotasPorEvolucion" asp-controller="Notas" asp-route-id="@item.Id" asp-route-paciente="@TempData["historiaId"]">Notas</a>
                </td>
            </tr>
        }


    </tbody>
</table>


<div>
    <a align="right" asp-action="HistoriaClinicaDePaciente" asp-controller="HistoriaClinicas" asp-route-id="@TempData["historiaId"]">Volver</a>
</div>
 