@model IEnumerable<Historias_Clinicas.Models.Evolucion>

@{
    ViewData["Title"] = "Index";
}
@ViewData["episodioId"];

<h1>Evoluciones</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoAbierto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.MedicoId)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.EstadoAbierto)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FechaYHoraAlta)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FechaYHoraCierre)
            </td>
            <td>
                @if (User.IsInRole("Medico"))
                {
                    <p align="left">
                        <a asp-action="Index" asp-controller="Notas" asp-route-id="@item.Id">Notas</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                    </p>
                }

                @if (User.IsInRole("Empleado"))
                {
                    <p align="left">
                        <a asp-action="Index" asp-controller="Notas" asp-route-id="@item.Id">Notas</a>
                    </p>
                }

                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |

            </td>
        </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Empleado"))
{
    <div>
        <a align="right" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>
}
@if (User.IsInRole("Medico"))
{
    <div>
        <a align="right" asp-action="Index" asp-controller="Pacientes">Volver</a>
    </div>
}
@if (User.IsInRole("Paciente"))
{
    <div>
        <a align="right" asp-action="MenuPaciente" asp-controller="Pacientes">Volver</a>
    </div>
}
