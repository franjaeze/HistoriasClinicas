@model Historias_Clinicas.Models.Evolucion

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Evolucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MedicoId" class="control-label"></label>
                <input asp-for="MedicoId" class="form-control" readonly />
                <span asp-validation-for="MedicoId" class="text-danger"></span>
            </div>
            <form asp-action="FechaYHoraAlta">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" type="datetime-local" id="FechaYHoraCierre"
                           name="FechaYHoraCierre" value=DateTime.Now
                           min=DateTime.Now max="2023-06-14T00:00">
                    <span class="text-danger"></span>
                </div>
            </form>
            <form asp-action="FechaYHoraCierre">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" type="datetime-local" id="FechaYHoraCierre"
                           name="FechaYHoraCierre" value=DateTime.Now
                           min=DateTime.Now max="2023-06-14T00:00">
                    <span class="text-danger"></span>
                </div>
            </form>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EstadoAbierto" /> @Html.DisplayNameFor(model => model.EstadoAbierto)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionAtencion" class="control-label"></label>
                <input asp-for="DescripcionAtencion" class="form-control" />
                <span asp-validation-for="DescripcionAtencion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a type="button" class="btn btn-secondary" style="margin-left: 20px"  asp-action="EvolucionesPorEpisodio" asp-route-id="@TempData["EpisodioId"]">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
