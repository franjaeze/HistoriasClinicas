@model Historias_Clinicas.Models.Evolucion

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Evolucion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaYHoraAlta" class="control-label"></label>
                <input asp-for="FechaYHoraAlta" class="form-control" />
                <span asp-validation-for="FechaYHoraAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionAtencion" class="control-label"></label>
                <input asp-for="DescripcionAtencion" class="form-control" />
                <span asp-validation-for="DescripcionAtencion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="boton" type="submit" value="Guardar" />
                <a class="btn btn-secondary" style="margin-left: 20px" asp-action="EvolucionesPorEpisodio" asp-controller="Evoluciones" asp-route-id="@TempData["episodioId"]" asp-route-historiaClinicaId="@TempData["historiaClinicaId"]">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
