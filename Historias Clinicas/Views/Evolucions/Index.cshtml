@model IEnumerable<Historias_Clinicas.Models.Evolucion>

@{
    ViewData["Title"] = "Index";
}

<h1>Evoluciones</h1>

<p>
    <a asp-action="Create">Agregar Evolucion</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraAlta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaYHoraCierre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoAbierto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionAtencion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indicaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecisaEstudiosAdicionales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecisaInterconsultaMedica)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaYHoraAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaYHoraCierre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoAbierto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionAtencion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indicaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecisaEstudiosAdicionales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecisaInterconsultaMedica)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                 <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                 <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
