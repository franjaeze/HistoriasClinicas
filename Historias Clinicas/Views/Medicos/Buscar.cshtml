@model IEnumerable<Historias_Clinicas.Models.Medico>


<section class="search-section">
    <div class="container">
        <form method="get" asp-action="Buscar" asp-controller="Medicos" novalidate="novalidate">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                            <input type="text" class="form-control search-input" name="Medico" placeholder="Apellido del Medico" />
                        </div>
                        <div class="col-lg-2 col-md-3 col-sm-12 p-0">
                            <button class="boton" type="submit">
                                Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>


<div class="table-responsive">
    <table class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Segundo Nombre</th>
                <th>Especialidad</th>
                <th>Matricula</th>
                <th>Correo electronico</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Medico medico in Model)
            {
                <tr>
                    <td>
                        @medico.Apellido
                    </td>
                    <td>
                        @medico.Nombre
                    </td>
                    <td>
                        @medico.SegundoNombre
                    </td>
                    <td>
                        @medico.Especialidad
                    </td>
                    <td>
                        @medico.MatriculaNacional
                    </td>
                    <td>
                        @medico.Email
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<section>
    <a type="button" class="btn btn-secondary align-content-end" asp-action="Index">Cancelar</a>
</section>
