<div class="container">
    <div class="row">
        <div class=" col-lg-2"></div>
        <div class=" col-lg-8 col-md-12">
            @if (ViewBag.Nombre != null)
            {
                <h1> Bienvenido @ViewBag.Nombre ! </h1>}
            <h3 class="my-2">En que podemos ayudarte? </h3>
            <ul class="nobull my-5">
                <li class="my-3">
                    <a type="button" class="menuBoton" asp-controller="Medicos" asp-action="ListarPacientes" asp-route-id="@ViewBag.id">
                        Mis Pacientes
                    </a>
                </li>
                <li class="my-3">
                    <a type="button" class="menuBoton" asp-controller="Medicos" asp-action="Edit" asp-route-id="@ViewBag.id">
                        Actualizar Informacion Personal
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>
