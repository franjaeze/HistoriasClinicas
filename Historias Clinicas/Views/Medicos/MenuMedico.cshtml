@model Historias_Clinicas.Models.Medico
@{
    ViewData["Title"] = "MenuMedico";
}

<div class="container">
    <div class="row">
        <div class=" col-lg-2"></div>
        <div class=" col-lg-8 col-md-12">
            <h1> Bienvenido @User.Identity.Name ! </h1>
            <h3 class="my-2">En que podemos ayudarte? </h3>
            <ul class="nobull my-5">
                <li class="my-3">
                    <a type="button" class="menuBoton" asp-controller="Medicos" asp-action="ListarPacientes">
                        Mis Pacientes
                    </a>
                </li>
                <li class="my-3">
                    <a type="button" class="menuBoton" asp-controller="Medicos" asp-action="Edit" asp-route-id="@ViewData["MedicoId"]">
                        Actualizar Informacion Personal
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>
   